* {
    font-family: "Fira Code", "Font Awesome 5 Free";
    font-size: 16px;
}

window#waybar {
    background: rgba(0,0,0,0);   
    border-radius: 0;
    
}

.modules-left, .modules-center, .modules-right {
  background: rgba(235,235,235,0);
  padding: 0 10 0 10;
  border-radius: 10px;
  border: 1.5px solid rgba(12,12,28,0);
}

#workspaces button {
  color: white;
  min-width: 13px;
}

#custom-launcher, #workspaces, #clock, #custom-media, #backlight, #pulseaudio, #battery, #tray, #custom-power {
  color: white;
  padding: 0 7 0 7;
}

#custom-media {
  background: rgba(0,200,0,0);
  color: white;
  border-radius: 10px;
}

tooltip {
  background: rgba(0, 0, 0, 1);
  border: 1px solid rgb(50,50,50);
}

tooltip label {
  color: white;
}
